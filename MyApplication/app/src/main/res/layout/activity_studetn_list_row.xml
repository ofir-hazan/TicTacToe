<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".StudetnListRow">

    <ImageView
        android:id="@+id/studentlistrow_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/studentlistrow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="studentlistrow_name"
        app:layout_constraintEnd_toStartOf="@+id/studentlistrow_checkBox"
        app:layout_constraintStart_toEndOf="@+id/studentlistrow_avatar"
        tools:layout_editor_absoluteY="14dp" />

    <TextView
        android:id="@+id/studentlistrow_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="studentlistrow_id"
        app:layout_constraintEnd_toStartOf="@+id/studentlistrow_checkBox"
        app:layout_constraintStart_toEndOf="@+id/studentlistrow_avatar"
        tools:layout_editor_absoluteY="56dp" />

    <CheckBox
        android:id="@+id/studentlistrow_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="27dp" />
</androidx.constraintlayout.widget.ConstraintLayout>